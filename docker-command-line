#if you want to run the docker deamon as a non root user 
   54  usermod -aG docker lab-user
###lets learn about some docker command. 
  docker info
  #if you want to see all the command related to docker container or build images
  docker 
  ###lets create our first container
 61  docker container run --publish 80:80 --detach nginx
   62  docker ps
   63  docker images
#lets test the image
curl localhost
##copy the dns name and paste it in the browser you will see the test page
#you can check all your images
35  docker images
#second time when i run a container with the same image it will not go to hub.docker.com and download the image
   36  docker container run --publish 81:80 --detach nginx
   37  docker ps
#######################################lets create an apache server 
 41  docker container run --publish 82:80 --detach httpd
   42  docker ps
   43  curl localhost:82
   44  docker images
##you can check the same in the browser using dns:82
#################################lets try to undestand the --detach mode
 49  docker container run --publish 83:80  httpd
#press ctrl c to come out of the terminal
   50  docker ps
   51  docker ps -a
############################## --detach mode it will make your container run as bacground process deamon process. it will run as foreground
#container vs process id. 
#we will create a mongo db container
 57  docker run --name mongo -d mongo
   58  docker ps
#lets check the process id of the mongo db container
   61  docker top mongo
   62  ps aux
#match the process id of the mongo db container
   63  docker top mongo
   64  docker ps
##to kill the mongo db container kindly change the process id with your own processid
   
   66  sudo kill -9 10908
#this will not show the mongodb contianer
   67  docker ps
#this will show the mongo db contianer in exit state 
   68  docker ps -a
   69  docker start mongo
   70  docker ps

#lets create a docker container and login inside it
 74  docker run -d -p 3306:3306 --name db -e MYSQL_RANDOM_ROOT_PASSWORD=true mysql
   75  docker ps
#the below command will show the generated password copy it 
   76  docker logs db
   77  docker exec -it db bash
#lets login inside the mysql db 
mysql -u root -p
##paste the password
#you will get the mysql prompt
show databases;
create database employee;
show databases;
##lets exit mysql and container 
exit
exit
##lets learn about volume in container 
sudo -i
docker run -d -p 3306:3306 --name mysql -e MYSQL_ALLOW_EMPTY_PASSWORD -v mysql-db:/var/lib/mysql mysql:8.0
##lets check ti created the database and the volume or not 
docker ps
docker container inspect mysql
docker volume inspect mysql 
##this will show the database storage path in your local machine 
 74  cd /var/lib/docker/volumes/mysql-db/_data
   75  ls
#now we will login inside mysql container and create a database it should reflect in this path 
  77  docker exec -it mysql bash
#3once you login 
mysql -u root -p
###press enter 
show databases;
create database employee;
#below command will show an database is being created
show databases;
#create another database with your name 
exit
exit
